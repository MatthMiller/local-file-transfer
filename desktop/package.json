{
    "name": "electron-with-express",
    "description": "Demonstrates spawning Express from Electron and using it to serve content",
    "version": "1.0.15",
    "main": "./dist/src/main.js",
    "icon": "./dist/favicon.ico",
    "expressPort": 3000,
    "basePath": "./dist",
    "authors": [
        "MatthMiller"
    ],
    "license": "MIT",
    "private": true,
    "scripts": {
        "build": "tsc",
        "start": "tsc && electron .",
        "pack": "tsc && cd .. && electron-packager ./electron-with-express --icon=./electron-with-express/dist/favicon.ico --ignore=\"^(?!(.*node_modules|.*dist))(.*src.*|.*screenshots.*|.*tsconfig.*|.*README.*|.*git.*)\" --asar.unpack=*.{node,dll,db} --overwrite"
    },
    "dependencies": {
        "body-parser": "^1.20.2",
        "cookie-parser": "^1.4.6",
        "debug": "^4.3.4",
        "ejs": "^3.1.9",
        "express": "^4.18.2",
        "http-errors": "^2.0.0",
        "ip": "^2.0.1",
        "morgan": "^1.10.0",
        "node-fetch": "^2.7.0",
        "serve-favicon": "^2.5.0",
        "socket.io": "^4.7.4",
        "socket.io-client": "^4.7.4"
    },
    "devDependencies": {
        "@types/body-parser": "^1.19.5",
        "@types/cookie-parser": "^1.4.6",
        "@types/express": "^4.17.21",
        "@types/http-errors": "^2.0.4",
        "@types/ip": "^1.1.3",
        "@types/morgan": "^1.9.9",
        "@types/node": "^20.11.16",
        "@types/node-fetch": "^2.6.11",
        "electron": "^28.2.2",
        "typescript": "^5.3.3"
    }
}
